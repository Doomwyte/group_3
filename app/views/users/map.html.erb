<!--Google Maps Search page-->
<style>
.jumbotron1{
	background: url("/assets/xilliabg.jpg");
	background-repeat: no-repeat;
    background-attachment: fixed;
    background-position: center;
    background-size: 100%;
	height: 700px;
}

.innerjumbotron1{
	background: #0f151a;	
	height: 350px;
	width: 100%;
    margin: 0 auto;
	opacity: 0.82;
}

.containerjumbotron{
	width: 750px;
    margin: 0 auto;	
}

.floating{
	position:relative;
	float:left;
	height: 400px;
	margin-right:40px;
	margin-left: -20px;
}

hr{
	border-width: 5px;
}

</style>
<script src="//maps.google.com/maps/api/js?v=3.18&sensor=false&client=&key=&libraries=geometry&language=&hl=&region="></script> 
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script>
<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
<!--Beginning of body-->
<body data-no-turbolink > 
<div class="jumbotron jumbotron1">
	<br />
	<br />
	<br />
	<br />
	<br />
	<br />
	<br />
	<br />
	<div class="jumbotron innerjumbotron1">
		<div class="container containerjumbotron">
	  		<hr>
	  		<h2>A NEW ADVENTURE AWAITS WITH THE GOOGLE MAPS API!</h2>
	  		<hr>
	  		<p>Use the Google Maps API below to search for fellow gamers around your neighbourhood. Just check off the games you play and Google Maps will load users that play the same games as you. 
	  		</p>	
	  	</div>
	</div>
</div>
<br /> 
<br />
<br />
<br />
<br /> 
<br />
<br />
<br />

<div class="container containerjumbotron">
	
	
<!-- Search Bar -->
	<% if @users.present? %>
	  <!-- Print nothing -->
	<% else %>
	  <p style="color:red">Sorry there are no users that follow that criteria </p>
	  <% render @users %>
	<% end %>
	
	<!-- Username Search -->
	<div style="color:black">
		<%= form_tag(maps_path, :method => "get", id: "search-form") do %>
			<%= text_field_tag :search, params[:search], placeholder: "Search Users" %>
			<%= submit_tag "Search" %>
			<br />
			<!-- Game Search -->
			<div style="color:white; display: inline-block; padding-top:20px">
				<%= form_tag(maps_path, :method => "get", id: "search-form") do %>
				
					<%= hidden_field_tag :lol, 'false' %>
					<%= check_box_tag :lol, 'true' %>
					<%= label_tag(:lol, "League of Legends") %>
					
					<%= hidden_field_tag :dota2, 'false' %>
					<%= check_box_tag :dota2, 'true' %>
					<%= label_tag(:dota2, "Dota 2") %>
					
					<%= hidden_field_tag :smite, 'false' %>
					<%= check_box_tag :smite, 'true' %>
					<%= label_tag(:smite, "Smite") %>
					
					<%= hidden_field_tag :hots, 'false' %>
					<%= check_box_tag :hots, 'true' %>
					<%= label_tag(:hots, "Heroes of the Storm") %>
					
					<div style="color:black; float:right; margin-left:5px"><%= submit_tag "Search by Game" %></div>
					
				<% end %>	
			</div>
		<% end %>
	</div>
	<%= link_to 'Reset', maps_path %>
	<br />
	<br />
	  	<div id="map" style='width: 800px; height: 400px; color: black'></div>
	</div>
	
	
	<script type="text/javascript">
	    handler = Gmaps.build('Google');
	    handler.buildMap({ 
	        provider: {
	            disableDefaultUI: true,
	            maxZoom: 16,
	            <% if logged_in? %>
	            	center: new google.maps.LatLng(<%= current_user.latitude %>, <%= current_user.longitude %>),
	            <% else %>
	            	center: new google.maps.LatLng(49.278752, -122.917086),
	            <% end %>
	            zoom: 15
	            
	        }, 
	        internal: {
	            id: 'map'
	            
	            }
	        }, 
	        function(){
	          markers = handler.addMarkers(<%=raw @hash.to_json %>);
	          handler.bounds.extendWith(markers);
	          handler.fitMapToBounds();
	        }
	    );
	</script>

</div>
<br /> 
<br />
